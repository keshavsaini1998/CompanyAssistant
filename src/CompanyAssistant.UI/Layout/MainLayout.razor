@inherits LayoutComponentBase

<MudThemeProvider />
<MudPopoverProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <!-- Top AppBar -->
    <MudAppBar Color="Color.Primary" Elevation="1">
        <MudText Typo="Typo.h6">Company Assistant</MudText>
    </MudAppBar>

    <!-- Sidebar / Drawer -->
